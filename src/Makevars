MACFLAG = `echo 'cat(any(grepl("\\bapple\\b|\\bmacos\\b",as.character(sessionInfo()))))'\
| "${R_HOME}/bin/R" --vanilla --slave`

ifeq "$MACFLAG" "TRUE"
OMPFLAG = ""
else
OMPFLAG = $(SHLIB_OPENMP_CFLAGS)
endif
CXX_STD = CXX11
PKG_CXXFLAGS = -g -Wall -I include $(OMPFLAG)
PKG_CFLAGS = -g -Wall -I include
PKG_LIBS = ${LAPACK_LIBS} ${BLAS_LIBS} ${FLIBS} $(OMPFLAG)
